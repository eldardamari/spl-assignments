#ifndef COURSE_H_
#define COURSE_H_

#include <iostream>
#include <vector>

class Course{

protected:
		vector< shared_ptr<Student> > students;
		const string _courseName;
		unsigned short _semester;
		unsigned short _minimumGrade;

		Course(){};
public:
		virtual void teach();
		virtual void reg(Student &s)=0;
		unsigned short getMinGrade()const;
		virtual ~Course(){ std::cout << "Now the Course is dead!" << endl; }

};
#endif
